{
  "name": "@thibautre/eye-workspace",
  "private": true,
  "scripts": {
    "start": "yarn start:web",
    "start:rs": "cargo run serve",
    "start:web": "yarn web start",
    "web": "yarn workspace @thibautre/eye-web",
    "db:migrate": "diesel migration run",
    "db:migrate:redo": "diesel migration redo",
    "prod:sync-and-restart": "sudo systemctl stop eye.service && git pull origin main && yarn prod:build && sudo systemctl start eye.service",
    "prod": "./target/release/eye",
    "prod:build": "cargo build --release && yarn web build"
  },
  "workspaces": [
    "packages-js/*"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false
  },
  "dependencies": {
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1"
}
